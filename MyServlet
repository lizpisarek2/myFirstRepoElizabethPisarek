package ex3;


public class Ex3 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int limit = 500;
        double pi = 0.0;
        double num = 1.0;
        
        //Calculating the accurate approximation of Pi(π)
        do {
            pi += (1/num - 1/num + 2);
            num += 4;
            limit --;
        } while (limit <= 0);
        
        //Printing PI(π)
        System.out.println("Pi in Netbeans Java is " + Math.PI); 
    }

}
